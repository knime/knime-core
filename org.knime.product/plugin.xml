<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin>

   <extension-point id="splashExtension" name="KNIME Splash Extensions" schema="schema/splashExtension.exsd"/>

   <extension
         id="KNIME_APPLICATION"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="org.knime.product.rcp.KNIMEApplication">
         </run>
      </application>
   </extension>
   <extension
         id="KNIME_PRODUCT"
         name="KNIME Analytics Platform"
         point="org.eclipse.core.runtime.products">
      <product
            name="KNIME Analytics Platform"
            application="org.knime.product.KNIME_APPLICATION"
            description="KNIME Analytics Platform">
         <property
               name="windowImage"
               value="icons/png/knime_16.png">
         </property>
         <property
               name="aboutText"
               value="%aboutText">
         </property>
         <property
               name="aboutImage"
               value="icons/png/knime_about.png">
         </property>
         <property
               name="appName"
               value="KNIME">
         </property>
         <property
               name="preferenceCustomization"
               value="plugin_customization.ini">
         </property>
         <property
               name="windowImages"
               value="icons/png/knime_16.png,icons/png/knime_32.png,icons/png/knime_48.png,icons/png/knime_64.png,icons/png/knime_128.png,icons/png/knime_256.png">
         </property>
         <property
               name="cssTheme"
               value="org.knime.product.theme.knime">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            name="New KNIME Project..."
            description="Creates a new KNIME project"
            id="open.new.project.wizard">
      </command>
   </extension>
   <extension
         id="KNIME_BATCH_APPLICATION"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="org.knime.product.headless.KNIMEBatchApplication">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.splashHandlers">
      <splashHandler
            class="org.knime.product.KNIMESplashHandler"
            id="org.knime.product.splashHandlers.extensible">
      </splashHandler>
      <splashHandlerProductBinding
            splashId="org.knime.product.splashHandlers.extensible"
            productId="org.knime.product.KNIME_PRODUCT">
      </splashHandlerProductBinding>
   </extension>
   <extension
         point="org.eclipse.equinox.p2.engine.actions">
      <action
            class="org.knime.product.p2.actions.ShellExec"
            name="shellexec"
            touchpointType="org.eclipse.equinox.p2.osgi"
            touchpointVersion="1.0.0"
            version="1.0.0">
      </action>
   </extension>
   <extension
         point="org.eclipse.e4.ui.css.swt.theme">
      <theme
            basestylesheeturi="css/knime.css"
            id="org.knime.product.theme.knime"
            label="KNIME">
      </theme>
   </extension>
<!--
-->
</plugin>
