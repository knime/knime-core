<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE RSyntaxTheme SYSTEM "theme.dtd">

<!--
	Theme that mimics Eclipse's defaults.
-->
<RSyntaxTheme version="1.0">

   <!-- Specify family="..." attribute to override system default monospaced. -->
   <baseFont size="12"/>
   
   <!--  General editor colors. -->
   <background color="ffffff"/>
   <caret color="000000"/>
   <selection bg="c8c8ff"/>
   <currentLineHighlight color="e8f2fe" fade="false"/>
   <marginLine fg="b0b4b9"/>
   <markAllHighlight color="6b8189"/> <!-- TODO: Fix me -->
   <markOccurrencesHighlight color="d4d4d4"/>
   <matchedBracket fg="c0c0c0" animate="false" highlightBoth="true"/>
   <hyperlinks fg="3f3fbf"/>
   <secondaryLanguages>
      <language index="1" bg="cccccc"/>
   </secondaryLanguages>
   <!-- Gutter styling. -->
   <gutterBorder color="dddddd"/>
   <lineNumbers fg="787878"/>
   <foldIndicator fg="808080" iconBg="ffffff"/>
   <iconRowHeader activeLineRange="ff0000"/>
   
   <!-- Syntax tokens. -->
   <tokenStyles>
      <style token="COMMENT_EOL" fg="3F7F5F" italic="false"/>
      <style token="COMMENT_MULTILINE" fg="3F7F5F" italic="false"/>
      <style token="COMMENT_DOCUMENTATION" fg="3f5fbf" italic="false"/>
      <style token="COMMENT_KEYWORD" fg="ae9fbf" italic="false"/>
      <style token="COMMENT_MARKUP" fg="7F7F9F" italic="false"/>
      
      <style token="RESERVED_WORD" fg="7F0055" bold="true"/>

      <style token="FUNCTION" fg="000000"/>
      
      <style token="LITERAL_BOOLEAN" fg="7f0055" bold="true"/>
      <style token="LITERAL_NUMBER_DECIMAL_INT" fg="000000"/>
      <style token="LITERAL_NUMBER_FLOAT" fg="000000"/>
      <style token="LITERAL_NUMBER_HEXADECIMAL" fg="000000"/>
      <style token="LITERAL_STRING_DOUBLE_QUOTE" fg="2A00FF"/>
      <style token="LITERAL_CHAR" fg="2A00FF"/>
      <style token="LITERAL_BACKQUOTE" fg="2A00FF"/>
      
      <style token="DATA_TYPE" fg="7f0055" bold="true"/>
    
      <style token="VARIABLE" fg="ae9fbf" bold="true"/>
      
      <style token="REGEX" fg="000000"/>
            
      <style token="ANNOTATION" fg="646464"/>      
      
      <style token="IDENTIFIER" fg="000000"/>
            
      <style token="WHITESPACE" fg="000000"/>
      
      <style token="SEPARATOR" fg="000000"/>
      
      <style token="OPERATOR" fg="000000"/>
      
      <style token="PREPROCESSOR" fg="808080"/>
            
      <style token="MARKUP_TAG_DELIMITER" fg="808080"/>
      <style token="MARKUP_TAG_NAME" fg="3f7f7f"/>
      <style token="MARKUP_TAG_ATTRIBUTE" fg="7f7f7f"/>
      <style token="MARKUP_TAG_ATTRIBUTE_VALUE" fg="2900ff"/>
      
      <style token="ERROR_IDENTIFIER" fg="000000" bg="ffcccc"/>
      <style token="ERROR_NUMBER_FORMAT" fg="000000" bg="ffcccc"/>
      <style token="ERROR_STRING_DOUBLE" fg="000000" bg="ffcccc"/>
      <style token="ERROR_CHAR" fg="000000" bg="ffcccc"/>
   </tokenStyles>

</RSyntaxTheme>
